      <property field="targetedIlluminance" name="targetedIlluminance" type="java.lang.Double"/>
    </provides>
    <requires optional="true" specification="fr.liglab.adele.icasa.service.zone.size.calculator.ZoneSizeCalculator" field="zoneCalculator"/>
  </component>
  <instance component="BinaryFollowMe" name="my.first.follow.me"/>
</ipojo>